<!-- Edit Cow Modal -->
<div
  class="modal fade"
  id="editCowModal"
  tabindex="-1"
  aria-labelledby="editCowModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <form id="editCowForm" method="post" enctype="multipart/form-data">
        <div class="modal-header text-center">
          <h5 class="modal-title w-100" id="editCowModalLabel">Edit Cow</h5>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="modal"
            aria-label="Close"
          ></button>
        </div>
        <div class="modal-body">
          <div class="mb-3">
            <label for="formFile" class="form-label">Image</label>
            <input
              class="form-control"
              type="file"
              id="EditformFile"
              name="image"
            />
            <img
              id="EditcowImagePreview"
              src=""
              width="100"
              class="image-thumbnail mt-1"
              name="old_image"
            />
          </div>
          <div class="mb-3">
            <label for="cowTag" class="form-label">Tag</label>
            <input
              type="number"
              class="form-control"
              id="EditcowTag"
              name="tag"
              readonly
            />
          </div>
          <div class="mb-3">
            <label for="cowWeight" class="form-label">Weight</label>
            <input
              type="number"
              step=".001"
              class="form-control"
              id="EditcowWeight"
              name="weight"
            />
          </div>
          <div class="mb-3">
            <label for="cowBreedCount" class="form-label">Breeding Count</label>
            <input
              type="number"
              class="form-control"
              id="EditcowBreedCount"
              name="breedCount"
            />
          </div>
          <div class="mb-3">
            <label for="cowlastTimeCalved" class="form-label">Last Time Calved</label>
            <input
              type="date"
              class="form-control"
              id="EditcowlastTimeCalved"
              name="lastTimeCalved"
            />
          </div>
        </div>
        <div class="modal-footer">
          <input type="hidden" name="id" id="EditcowId" />
          <button
            type="button"
            class="btn btn-secondary"
            data-bs-dismiss="modal"
          >
            Cancel
          </button>
          <button type="submit" class="btn btn-success">Update</button>
        </div>
      </form>
    </div>
  </div>
</div>
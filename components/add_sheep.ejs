
<!--Add Sheep Modal -->
<div class="modal " id="addSheepModal" tabindex="-1" aria-labelledby="addSheepModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <form id="addSheepForm" method="post" action="/addSheep"">
        <div class="modal-header text-center">
          <h5 class="modal-title w-100" id="addSheepModalLabel">Adicionar Ovelha</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <div class="mb-3">
            <label for="checkDigit" class="form-label">Check Digit</label>
            <input type="number" class="form-control" id="sheepcheckDigit" name="checkDigit"  placeholder="12456">
          </div>
          <div class="mb-3">
            <label for="tag" class="form-label">Identificação</label>
            <input type="number" class="form-control" id="sheepTag" name="tag"  placeholder="12456">
          </div>
          <div class="mb-3">
            <label for="birthDate" class="form-label">Data de nascimento</label>
            <input type="date" class="form-control" id="sheepbirthDate" name="birthDate" placeholder="15-08-2023">
          </div>
          <div class="mb-3">
            <label for="breedCount" class="form-label">Vezes Paridas</label>
            <input type="number" class="form-control" id="sheepBreedCount" name="breedCount" placeholder="3">
          </div>
          <div class="mb-3">
            <label for="lastTimeCalved" class="form-label">Data da última vez que pariu</label>
            <input type="date" class="form-control" id="sheeplastTimeCalved" name="lastTimeCalved" placeholder="15-08-2023">
          </div>
          <div class="mb-3">
            <label for="dateOfLastSanitation" class="form-label">Data da última sanitização</label>
            <input type="date" class="form-control" id="sheepdateOfLastSanitation" name="dateOfLastSanitation" placeholder="15-08-2023">
          </div>
          <div class="mb-3">
            <label for="comments" class="form-label">Comentários</label>
            <textarea class="form-control" id="sheepComments" name="comments" placeholder="Escreve aqui os teus comentarios..." rows="2" cols="30"></textarea>
          </div>
         </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
          <button type="submit" class="btn btn-success">Adicionar</button>
        </div>
      </form>
    </div>
  </div>
</div>


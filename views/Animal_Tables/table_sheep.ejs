<div class="table-responsive">
        <% if (sheeps && sheeps.length > 0) { %>
        <table class="table table-striped table-dark table-bordered table-hover my-3">
          <thead>
            <tr>
              <th scope="col">Check Digit</th>
              <th scope="col">Identificação</th>
              <th class="col-hide-m" scope="col">Data de nascimento</th>
              <th class="col-hide-m" scope="col">Nº de Parições</th>
              <th class="col-hide-m" scope="col">Data da última parição</th>
              <th class="col-hide-m" scope="col">Data da última intervenção sanitária</th>
              <th class="col-hide-m" scope="col">Comentários/Observaçoes</th>
              <th scope="col">Ações</th>
            </tr>
          </thead>
        <tbody>
          <% sheeps.forEach((row, index) => { %>
            <tr class="align-middle infoSheepBtn"
                data-infotag="<%= row.tag %>"
                data-infoid="<%= row._id %>"
                data-infocheckDigit="<%= row.checkDigit %>"
                data-infobirthDate="<%= row.birthDate ? new Date(row.birthDate).toISOString().split('T')[0] : '' %>"
                data-infobreedcount="<%= row.breedCount %>"
                data-infolasttimecalved="<%= row.lastTimeCalved ? new Date(row.lastTimeCalved).toISOString().split('T')[0] : '' %>"
                data-infodateoflastsanitation="<%= row.dateOfLastSanitation ? new Date(row.dateOfLastSanitation).toISOString().split('T')[0] : '' %>"
                data-infocomments="<%= row.comments %>"
              >
              <td><%= row.checkDigit %></td>
              <td><%= row.tag %></td>
              <td class="col-hide-m"><%= row.birthDate ? new Date(row.birthDate).toLocaleDateString('pt-PT') : '-' %></td>
              <td class="col-hide-m"><%= row.breedCount %></td>
              <td class="col-hide-m"><%= row.lastTimeCalved ? new Date(row.lastTimeCalved).toLocaleDateString('pt-PT') : '-' %></td>
              <td class="col-hide-m"><%= row.dateOfLastSanitation ? new Date(row.dateOfLastSanitation).toLocaleDateString('pt-PT') : '-' %></td>
              <td class="col-hide-m"><%= row.comments %> </td>
              <td class="actions-cell-sheep">
                <a
                  type="button"
                  class="editSheepBtn"
                  data-bs-toggle="modal"
                  data-bs-target="#editSheepModal"
                  data-id="<%= row._id %>"
                  data-tag="<%= row.tag %>"
                  data-birthDate="<%= row.birthDate ? new Date(row.birthDate).toISOString().split('T')[0] : '' %>"
                  data-checkDigit="<%= row.checkDigit %>"
                  data-breedcount="<%= row.breedCount %>"
                  data-lasttimecalved="<%= row.lastTimeCalved ? new Date(row.lastTimeCalved).toISOString().split('T')[0] : '' %>"
                  data-dateoflastsanitation="<%= row.dateOfLastSanitation ? new Date(row.dateOfLastSanitation).toISOString().split('T')[0] : '' %>"
                  data-comments="<%= row.comments %>"
                >
                <i class="text-success fas fa-edit fa-lg"></i>
                </a>
                <a href="/deleteSheep/<%= row._id %>"
                  class="text-danger deleteSheepBtn"
                  data-id="/deleteSheep/<%= row._id %>">
                  <i class="fas fa-trash fa-lg"></i>
                </a>
              </td>
            </tr>
          <% }) %>
        </tbody>
        </table>
      <% } else { %>
        <h1 class="text-center text-secondary my-5">Não foram encontradas ovelhas. Por favor adicione.</h1>
      <% } %>
      </div>
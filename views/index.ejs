<%- include('layout/header')  %>


<style>
  /* override Bootstrap table-dark header color */
  .table.table-dark thead th {
    background-color: #63E6BE !important;
    color: #ffffff !important;
    border-top: 1px solid #63E6BE !important;
    border-left: 1px solid #63E6BE !important;
    border-right: 1px solid #63E6BE !important;
    border-bottom: 1px solid #4d5154 !important;
  }
  .table.table-dark thead th:not(:last-child) {
    border-right: 1px solid white !important;
  }

</style>
<script>
  document.addEventListener('DOMContentLoaded', function () {
    const alertEl = document.querySelector('.alert');
    if (!alertEl) return;
    const delayMs = 3000; // change to desired delay (milliseconds)

    setTimeout(function () {
      // use Bootstrap API if available
      if (typeof bootstrap !== 'undefined' && bootstrap.Alert) {
        const bsAlert = new bootstrap.Alert(alertEl);
        bsAlert.close();
      } else {
        // fallback: remove 'show' to trigger CSS fade then remove element
        alertEl.classList.remove('show');
        setTimeout(() => alertEl.remove(), 3000); // match CSS transition time
      }
    }, delayMs);
  });
</script>
<script>
document.addEventListener('DOMContentLoaded', () => {
  const deleteButtons = document.querySelectorAll('.deleteCowBtn');
  const confirmDeleteBtn = document.getElementById('confirmDeleteBtn');
  
  deleteButtons.forEach(btn => {
    btn.addEventListener('click', (e) => {
      e.preventDefault(); // stop default link
      const deleteUrl = btn.getAttribute('data-id');
      confirmDeleteBtn.setAttribute('href', deleteUrl); // set modal button link
      const deleteModal = new bootstrap.Modal(document.getElementById('deleteCowModal'));
      deleteModal.show();
    });
  });
});
</script>
<div class="container">
  <div class="row my-4">
    <div class="col-lg-12">
      <% if (message) { %>
        <div class="alert alert-dismissible fade show alert-<%= message.type %>" role="alert">
          <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="close"></button>
          <strong><%= message.message %></strong>
        </div>
      <% } %>
      <div class="table-responsive">
        <% if (cows && cows.length > 0) { %>
        <table class="table table-striped table-dark table-bordered table-hover my-3">
          <thead>
            <tr>
              <th scope="col">Image</th>
              <th scope="col">Tag</th>
              <th scope="col">Weight</th>
              <th scope="col">Breeding Count</th>
              <th scope="col">Last Time Breed</th>
              <th scope="col">Actions</th>
            </tr>
          </thead>
        <tbody>
          <% cows.forEach((row, index) => { %>
            <tr class="align-middle">
              <td><img src="<%= row.image %>" width="60"  alt="Cow Image" class="img-thumbnail"></td>
              <td><%= row.tag %></td>
              <td><%= row.weight %> kg</td>
              <td><%= row.breedCount %></td>
              <td><%= row.lastTimeCalved ? new Date(row.lastTimeCalved).toLocaleDateString() : '-' %></td>
              <td>
                <button
                      type="button"
                      class="btn btn-dark editCowBtn"
                      data-bs-toggle="modal"
                      data-bs-target="#editCowModal"
                      data-id="<%= row._id %>"
                      data-tag="<%= row.tag %>"
                      data-weight="<%= row.weight %>"
                      data-breedcount="<%= row.breedCount %>"
                      data-lasttimecalved="<%= row.lastTimeCalved ? new Date(row.lastTimeCalved).toLocaleDateString() : '-' %>"
                      data-image="<%= row.image %>"
                    >
                      <i class="text-success fas fa-edit fa-lg"></i>
                </button>
                <a href="/delete/<%= row._id %>"
                  class="text-danger deleteCowBtn"
                  data-id="/delete/<%= row._id %>">
                  <i class="fas fa-trash fa-lg"></i>
                </a>
              </td>
            </tr>
          <% }) %>
        </tbody>
        </table>
      <% } else { %>
        <h1 class="text-center text-secondary my-5">No cows found. Please add some cows.</h1>
      <% } %>
      </div>
    </div>
  </div>
</div>
<%- include('../components/edit_cows') %>
<%- include('../components/deleteCowModal') %>
<script src="/FillEditModal.js"></script>

<%- include('layout/footer')  %>


